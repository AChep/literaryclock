<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.artemchep.literaryclock.ui.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_donateFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/donateFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_donateQuoteFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/donateQuoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.artemchep.literaryclock.ui.fragments.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/donateFragment"
        android:name="com.artemchep.literaryclock.ui.fragments.DonateFragment"
        android:label="DonateFragment">
        <action
            android:id="@+id/action_donateFragment_to_donateQuoteFragment"
            app:destination="@id/donateQuoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.artemchep.literaryclock.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/donateQuoteFragment"
        android:name="com.artemchep.literaryclock.ui.fragments.DonateQuoteFragment"
        android:label="DonateQuoteFragment" />
</navigation>
